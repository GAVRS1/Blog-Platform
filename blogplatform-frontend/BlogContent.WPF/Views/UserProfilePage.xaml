<Page x:Class="BlogContent.WPF.Views.UserProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:BlogContent.WPF.Views"
      xmlns:viewmodel="clr-namespace:BlogContent.WPF.ViewModel" 
      xmlns:converters="clr-namespace:BlogContent.WPF.Utilities.Converters" 
      d:DataContext="{d:DesignInstance Type=viewmodel:UserProfileViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="Профиль пользователя">
    <Page.Resources>
        <converters:NullOrEmptyToVisibilityConverter x:Key="NullOrEmptyToVisibilityConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <local:SharedLayout>
        <local:SharedLayout.PageContent>
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Верхняя секция профиля с аватаром и основной информацией -->
                        <Border Background="White" 
                                CornerRadius="8" 
                                Padding="25" 
                                Margin="0,0,0,15"
                                BorderBrush="#DDDDDD"
                                BorderThickness="1"
                                Effect="{StaticResource ShadowEffect}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Аватар пользователя  -->
                                <Border Grid.Column="0" 
                                        Width="150" 
                                        Height="150" 
                                        CornerRadius="75" 
                                        Background="LightGray" 
                                        Margin="0,0,20,0">
                                    <Image Source="{Binding ProfilePicture}" 
                                           Stretch="UniformToFill">
                                        <Image.Clip>
                                            <EllipseGeometry Center="75,75" RadiusX="75" RadiusY="75"/>
                                        </Image.Clip>
                                    </Image>
                                </Border>

                                <!-- Информация о пользователе -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding FullName}" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Margin="0,0,0,5"/>

                                    <TextBlock Text="{Binding Username}" 
                                               FontSize="16" 
                                               Foreground="#65676B" 
                                               Margin="0,0,0,15"/>

                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Статистика: Публикации -->
                                        <StackPanel Grid.Column="0" 
                                                    Orientation="Horizontal" 
                                                    Margin="0,0,20,0">
                                            <TextBlock Text="📝" 
                                                       FontSize="16" 
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding PostsCount}" 
                                                       FontWeight="SemiBold" 
                                                       Margin="5,0,3,0" 
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="публикаций" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Статистика: Комментарии -->
                                        <StackPanel Grid.Column="1" 
                                                    Orientation="Horizontal">
                                            <TextBlock Text="💬" 
                                                       FontSize="16" 
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding CommentsCount}" 
                                                       FontWeight="SemiBold" 
                                                       Margin="5,0,3,0" 
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="комментариев" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Дата рождения и возраст -->
                                    <StackPanel Orientation="Horizontal" 
                                                Margin="0,0,0,10">
                                        <TextBlock Text="🎂" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding BirthDate}" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Age, StringFormat=({0} лет)}" 
                                                   VerticalAlignment="Center" 
                                                   Foreground="#65676B"/>
                                    </StackPanel>

                                    <!-- Кнопка "Назад" -->
                                    <Button Content="← Вернуться на главную" 
                                            Command="{Binding NavigateToHomeCommand}"
                                            HorizontalAlignment="Left" 
                                            Margin="0,15,0,0"
                                            Padding="12,8"
                                            Background="#4267B2"
                                            Foreground="White"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Секция с биографией пользователя -->
                        <Border Background="White" 
                                CornerRadius="8" 
                                Padding="25" 
                                Margin="0,0,0,15"
                                BorderBrush="#DDDDDD"
                                BorderThickness="1"
                                Effect="{StaticResource ShadowEffect}">

                            <StackPanel>
                                <TextBlock Text="О себе" 
                                           FontSize="18" 
                                           FontWeight="Bold" 
                                           Margin="0,0,0,10"/>

                                <TextBlock Text="{Binding Bio}" 
                                           TextWrapping="Wrap" 
                                           Foreground="#1C1E21"
                                           Visibility="{Binding Bio, Converter={StaticResource NullOrEmptyToVisibilityConverter}, ConverterParameter=invert}"/>

                                <!-- Если биография пуста -->
                                <TextBlock Text="Пользователь не указал информацию о себе" 
                                           TextWrapping="Wrap" 
                                           Foreground="#65676B"
                                           Visibility="{Binding Bio, Converter={StaticResource NullOrEmptyToVisibilityConverter}}"/>
                            </StackPanel>
                        </Border>

                        <!-- Последние публикации -->
                        <Border Background="White" 
                                CornerRadius="8" 
                                Padding="25" 
                                Margin="0,0,0,15"
                                BorderBrush="#DDDDDD"
                                BorderThickness="1"
                                Effect="{StaticResource ShadowEffect}">

                            <StackPanel>
                                <TextBlock Text="Последние публикации" 
                                           FontSize="18" 
                                           FontWeight="Bold" 
                                           Margin="0,0,0,15"/>

                                <!-- Список последних публикаций  -->
                                <ItemsControl ItemsSource="{Binding UserPosts}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#F0F2F5" 
                                                    CornerRadius="8" 
                                                    Padding="15" 
                                                    Margin="0,0,0,10">

                                                <StackPanel>
                                                    <TextBlock Text="{Binding Title}" 
                                                               FontWeight="SemiBold" 
                                                               Margin="0,0,0,5"/>

                                                    <TextBlock Text="{Binding Content}" 
                                                               TextWrapping="Wrap" 
                                                               MaxHeight="60"
                                                               TextTrimming="CharacterEllipsis"/>

                                                    <TextBlock Text="{Binding CreatedAtFormatted}" 
                                                               FontSize="11" 
                                                               Foreground="#65676B" 
                                                               Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Сообщение если нет публикаций -->
                                <TextBlock Text="У пользователя пока нет публикаций" 
                                           Foreground="#65676B"
                                           Margin="0,10,0,0"
                                           Visibility="{Binding HasNoPosts, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </local:SharedLayout.PageContent>
    </local:SharedLayout>
</Page>