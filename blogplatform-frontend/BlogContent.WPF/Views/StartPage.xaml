<Page x:Class="BlogContent.WPF.Views.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BlogContent.WPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Grid Background="#F0F2F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#4267B2" Height="80">
            <TextBlock Text="BlogContent" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Содержимое -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Width="400"
                    Margin="0,0,0,20">

            <TextBlock Text="Добро пожаловать!" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,30"/>

            <TextBlock Text="Делитесь статьями, фотографиями, видео с друзьями." 
                       TextAlignment="Center" 
                       TextWrapping="Wrap" 
                       FontSize="16" 
                       Margin="0,0,0,40"/>

            <Button Content="Войти" 
                    Command="{Binding NavigateToLoginCommand}" 
                    Height="50" 
                    Background="#4267B2" 
                    Foreground="White" 
                    FontSize="18" 
                    FontWeight="Bold" 
                    Margin="0,0,0,20" 
                    Cursor="Hand"/>

            <Button Content="Зарегистрироваться" 
                    Command="{Binding NavigateToRegisterCommand}" 
                    Height="50" 
                    Background="#42B72A" 
                    Foreground="White" 
                    FontSize="18" 
                    FontWeight="Bold" 
                    Cursor="Hand"/>
        </StackPanel>

        <!-- Футер -->
        <TextBlock Grid.Row="2" 
                   Text="© 2025 BlogContent. Сделал Тимур Бегинов." 
                   HorizontalAlignment="Center" 
                   Margin="0,10,0,20" 
                   Foreground="#65676B"/>
    </Grid>
</Page>
