<Page x:Class="BlogContent.WPF.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BlogContent.WPF.Views"
      xmlns:utilities="clr-namespace:BlogContent.WPF.Utilities"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="#F0F2F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#4267B2" Height="80">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="BlogContent" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Область входа -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                Width="400" 
                Padding="30" 
                Margin="0,50,0,50" 
                VerticalAlignment="Center"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                Effect="{StaticResource ShadowEffect}">

            <StackPanel>
                <TextBlock Text="Вход" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>

                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red" 
                           TextWrapping="Wrap" 
                           Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}" 
                           Margin="0,0,0,15"/>

                <!-- Email -->
                <TextBlock Text="Email:" Margin="0,0,0,5" FontWeight="Medium"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                         Height="40" 
                         Padding="10,0" 
                         VerticalContentAlignment="Center" 
                         Margin="0,0,0,15"
                         BorderBrush="#DDDDDD"/>

                <!-- Пароль -->
                <TextBlock Text="Пароль:" Margin="0,0,0,5" FontWeight="Medium"/>
                <PasswordBox Height="40" 
                    Padding="10,0" 
                    VerticalContentAlignment="Center" 
                     Margin="0,0,0,25"
                     BorderBrush="#DDDDDD"
                 utilities:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Кнопка входа -->
                <Button Content="Войти" 
                        Command="{Binding LoginCommand}" 
                        Height="45" 
                        Background="#4267B2" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        FontSize="16" 
                        Margin="0,0,0,20"/>

                <!-- Ссылки -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Нет аккаунта? " Foreground="#65676B"/>
                    <TextBlock Text="Зарегистрироваться" 
                              Foreground="#4267B2" 
                              FontWeight="SemiBold"
                              Cursor="Hand">
                        <TextBlock.InputBindings>
                            <MouseBinding MouseAction="LeftClick" 
                                         Command="{Binding NavigateToRegisterCommand}"/>
                        </TextBlock.InputBindings>
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Вернуться на " Foreground="#65676B"/>
                    <TextBlock Text="главную страницу" 
                              Foreground="#4267B2" 
                              FontWeight="SemiBold"
                              Cursor="Hand">
                        <TextBlock.InputBindings>
                            <MouseBinding MouseAction="LeftClick" 
                                         Command="{Binding NavigateToStartCommand}"/>
                        </TextBlock.InputBindings>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Футер -->
        <TextBlock Grid.Row="2" 
                   Text="© 2025 Блог Платформа. Все права защищены." 
                   HorizontalAlignment="Center" 
                   Margin="0,10,0,20" 
                   Foreground="#65676B"/>
    </Grid>
</Page>
