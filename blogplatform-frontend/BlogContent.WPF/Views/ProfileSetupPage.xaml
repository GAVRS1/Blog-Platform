<Page x:Class="BlogContent.WPF.Views.ProfileSetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:utilities="clr-namespace:BlogContent.WPF.Utilities"
      xmlns:local="clr-namespace:BlogContent.WPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfileSetupPage">

    <Grid Background="#F0F2F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#4267B2" Height="80">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="BlogContent" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Область настройки профиля -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="White" 
                    CornerRadius="8" 
                    Width="500" 
                    Padding="30" 
                    Margin="0,30,0,30" 
                    VerticalAlignment="Center"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    Effect="{StaticResource ShadowEffect}">

                <StackPanel>
                    <TextBlock Text="Настройка профиля" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20"/>

                    <TextBlock Text="Расскажите о себе" 
                               TextWrapping="Wrap" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20" 
                               Foreground="#65676B"/>

                    <!-- Сообщение об ошибке -->
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="Red" 
                               TextWrapping="Wrap" 
                               Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}" 
                               Margin="0,0,0,15"/>

                    <!-- Ник -->
                    <TextBlock Text="Ник:" Margin="0,0,0,5" FontWeight="Medium"/>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                             Height="40" 
                             Padding="10,0" 
                             VerticalContentAlignment="Center" 
                             Margin="0,0,0,15"
                             BorderBrush="#DDDDDD"/>

                    <!-- ФИО -->
                    <TextBlock Text="ФИО:" Margin="0,0,0,5" FontWeight="Medium"/>
                    <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" 
                             Height="40" 
                             Padding="10,0" 
                             VerticalContentAlignment="Center" 
                             Margin="0,0,0,15"
                             BorderBrush="#DDDDDD"/>

                    <!-- Дата рождения -->
                    <TextBlock Text="Дата рождения:" Margin="0,0,0,5" FontWeight="Medium"/>
                    <DatePicker SelectedDate="{Binding BirthDate, UpdateSourceTrigger=PropertyChanged}" 
                                Height="40" 
                                Padding="10,0" 
                                VerticalContentAlignment="Center" 
                                Margin="0,0,0,15"
                                BorderBrush="#DDDDDD"/>

                    <!-- О себе -->
                    <TextBlock Text="О себе:" Margin="0,0,0,5" FontWeight="Medium"/>
                    <TextBox Text="{Binding Bio, UpdateSourceTrigger=PropertyChanged}" 
                             Height="80" 
                             TextWrapping="Wrap"
                             Padding="10" 
                             VerticalContentAlignment="Top" 
                             AcceptsReturn="True"
                             Margin="0,0,0,15"
                             BorderBrush="#DDDDDD"/>

                    <!-- Фотография профиля -->
                    <TextBlock Text="Фотография профиля:" Margin="0,0,0,5" FontWeight="Medium"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Text="{Binding ProfilePictureUrl, UpdateSourceTrigger=PropertyChanged}" 
                                 Grid.Column="0"
                                 Height="40" 
                                 IsReadOnly="True"
                                 Padding="10,0" 
                                 VerticalContentAlignment="Center" 
                                 BorderBrush="#DDDDDD"/>

                        <Button Content="Выбрать" 
                                Grid.Column="1"
                                Command="{Binding BrowseImageCommand}" 
                                Height="40" 
                                Width="100"
                                Margin="10,0,0,0"
                                Background="#4267B2" 
                                Foreground="White"/>
                    </Grid>

                    <!-- Предварительный просмотр фото -->
                    <Border Width="150" 
                            Height="150" 
                            Margin="0,0,0,20"
                            HorizontalAlignment="Center"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1"
                            Visibility="{Binding HasProfilePicture, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Image Source="{Binding ProfilePictureSource}" 
                               Stretch="UniformToFill"/>
                    </Border>

                    <!-- Кнопки навигации -->
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Content="Назад" 
                                Grid.Column="0"
                                Command="{Binding BackCommand}" 
                                Height="45" 
                                Background="#808080" 
                                Foreground="White" 
                                FontWeight="Bold" 
                                FontSize="16" 
                                Margin="0,0,5,0"/>

                        <Button Content="Завершить регистрацию" 
                                Grid.Column="1"
                                Command="{Binding CompleteRegistrationCommand}" 
                                Height="45" 
                                Background="#42B72A" 
                                Foreground="White" 
                                FontWeight="Bold" 
                                FontSize="16" 
                                Margin="5,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Футер -->
        <TextBlock Grid.Row="2" 
                   Text="© 2025 BlogContent. Делал Тимур Бегинов." 
                   HorizontalAlignment="Center" 
                   Margin="0,10,0,20" 
                   Foreground="#65676B"/>
    </Grid>
</Page>
