<Window x:Class="BlogContent.WPF.CreatePost"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlogContent.WPF" xmlns:converters="clr-namespace:BlogContent.WPF.Utilities.Converters"
        mc:Ignorable="d"
        Title="SimpleTextPostDialog" Height="650" Width="850">
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InvertBooleanConverter x:Key="InvertBooleanConverter"/>
    </Window.Resources>

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Создание нового поста" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Форма создания поста -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Переключатель типа контента -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <RadioButton Content="Статья" 
                                IsChecked="{Binding IsArticle, Mode=TwoWay}"
                                GroupName="ContentType"
                                Margin="0,0,10,0"/>
                    <RadioButton Content="Фото" 
                                IsChecked="{Binding IsPhoto, Mode=TwoWay}"
                                GroupName="ContentType"
                                Margin="0,0,10,0"/>
                    <RadioButton Content="Видео" 
                                IsChecked="{Binding IsVideo, Mode=TwoWay}"
                                GroupName="ContentType"
                                Margin="0,0,10,0"/>
                    <RadioButton Content="Аудио" 
                                IsChecked="{Binding IsMusic, Mode=TwoWay}"
                                GroupName="ContentType"/>
                </StackPanel>

                <!-- Заголовок поста -->
                <TextBlock Text="Заголовок:" Margin="0,0,0,5" FontWeight="Medium"/>
                <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" 
                         Height="40" 
                         Padding="10,0" 
                         VerticalContentAlignment="Center" 
                         Margin="0,0,0,15"
                         BorderBrush="#DDDDDD"/>

                <!-- Текст поста  -->
                <StackPanel Visibility="{Binding IsArticle, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="Содержание:" Margin="0,0,0,5" FontWeight="Medium"/>
                    <TextBox Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}" 
                             Height="150" 
                             TextWrapping="Wrap"
                             Padding="10" 
                             VerticalContentAlignment="Top" 
                             AcceptsReturn="True"
                             Margin="0,0,0,15"
                             BorderBrush="#DDDDDD"/>
                </StackPanel>

                <!-- Секция добавления медиа (только для фото/видео/аудио) -->
                <Border Margin="0,10,0,15" 
                        Padding="15" 
                        BorderBrush="#DDDDDD" 
                        BorderThickness="1" 
                        CornerRadius="5"
                        Background="#F9F9F9"
                        Visibility="{Binding IsMediaSectionVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="{Binding MediaSectionTitle}" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>

                        <Button Content="Выбрать файл" 
                                Command="{Binding BrowseMediaCommand}" 
                                Height="40" 
                                Width="180"
                                HorizontalAlignment="Left"
                                Background="#4267B2" 
                                Foreground="White"
                                Margin="0,0,0,10"/>

                        <!-- Секция выбранного медиа -->
                        <Border Visibility="{Binding HasMedia, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding MediaInfo}" 
                                           FontWeight="Medium"
                                           Margin="0,0,0,10"/>

                                <!-- Превью изображения -->
                                <Image Source="{Binding MediaPreview}" 
                                       MaxHeight="200" 
                                       Stretch="Uniform"
                                       Visibility="{Binding IsPhoto, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       Margin="0,0,0,10"/>

                                <!-- Кнопка удаления медиа -->
                                <Button Content="Удалить файл" 
                                        Command="{Binding RemoveMediaCommand}" 
                                        Height="30" 
                                        Width="120"
                                        HorizontalAlignment="Left"
                                        Background="#dc3545" 
                                        Foreground="White"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Сообщение об ошибке -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red" 
                           TextWrapping="Wrap" 
                           Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}" 
                           Margin="0,0,0,15"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки действий -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" 
                    Command="{Binding CancelCommand}" 
                    Width="100" 
                    Height="40" 
                    Background="#808080" 
                    Foreground="White" 
                    Margin="0,0,10,0"/>

            <Button Content="Опубликовать" 
                    Command="{Binding CreatePostCommand}" 
                    Width="150" 
                    Height="40" 
                    Background="#42B72A" 
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>