<Application x:Class="BlogContent.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BlogContent.WPF" xmlns:converters="clr-namespace:BlogContent.WPF.Utilities.Converters">
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="\Assets\Styles\DefaultStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="PrimaryColor" Color="#4267B2"/>
            <SolidColorBrush x:Key="SecondaryColor" Color="#42B72A"/>
            <SolidColorBrush x:Key="BackgroundColor" Color="#F0F2F5"/>
            <SolidColorBrush x:Key="TextColor" Color="#1C1E21"/>
            <SolidColorBrush x:Key="SubtextColor" Color="#65676B"/>
            <SolidColorBrush x:Key="BorderColor" Color="#DDDDDD"/>
            <SolidColorBrush x:Key="ErrorColor" Color="#FA383E"/>
            <SolidColorBrush x:Key="WarningColor" Color="#FFA500"/>
            <SolidColorBrush x:Key="SuccessColor" Color="#42B72A"/>

            <converters:MediaUrlToImageConverter x:Key="MediaUrlToImageConverter"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
