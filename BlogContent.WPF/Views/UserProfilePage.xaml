<Page x:Class="BlogContent.WPF.Views.UserProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:BlogContent.WPF.Views"
      xmlns:viewmodel="clr-namespace:BlogContent.WPF.ViewModel" 
      xmlns:converters="clr-namespace:BlogContent.WPF.Utilities.Converters" 
      d:DataContext="{d:DesignInstance Type=viewmodel:UserProfileViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="Профиль пользователя">
    <Page.Resources>
        <converters:NullOrEmptyToVisibilityConverter x:Key="NullOrEmptyToVisibilityConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <local:SharedLayout>
        <local:SharedLayout.PageContent>
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel MaxWidth="760" HorizontalAlignment="Center">
                        <!-- Верхняя секция профиля с аватаром и основной информацией -->
                        <Border Style="{StaticResource CardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Аватар пользователя  -->
                                <Border Grid.Column="0" 
                                        Style="{StaticResource LargeAvatarStyle}" 
                                        Margin="0,0,20,0">
                                    <Image Source="{Binding ProfilePicture}" 
                                           Stretch="UniformToFill">
                                        <Image.Clip>
                                            <EllipseGeometry Center="40,40" RadiusX="40" RadiusY="40"/>
                                        </Image.Clip>
                                    </Image>
                                </Border>

                                <!-- Информация о пользователе -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding FullName}" 
                                               FontSize="22" 
                                               FontWeight="Bold" 
                                               Foreground="{StaticResource TitleTextBrush}"
                                               Margin="0,0,0,4"/>

                                    <TextBlock Text="{Binding Username}" 
                                               FontSize="14" 
                                               Foreground="{StaticResource MutedTextBrush}" 
                                               Margin="0,0,0,12"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                            <TextBlock Text="📝" FontSize="14" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding PostsCount}" 
                                                       FontWeight="SemiBold" 
                                                       Margin="6,0,4,0" 
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="публикаций" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="💬" FontSize="14" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding CommentsCount}" 
                                                       FontWeight="SemiBold" 
                                                       Margin="6,0,4,0" 
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="комментариев" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Дата рождения и возраст -->
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🎂" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding BirthDate}" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Age, StringFormat=({0} лет)}" 
                                                   VerticalAlignment="Center" 
                                                   Foreground="{StaticResource MutedTextBrush}"/>
                                    </StackPanel>

                                    <!-- Кнопка "Назад" -->
                                    <Button Content="← Вернуться на главную" 
                                            Command="{Binding NavigateToHomeCommand}"
                                            HorizontalAlignment="Left" 
                                            Margin="0,15,0,0"
                                            Style="{StaticResource OutlineButtonStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Секция с биографией пользователя -->
                        <Border Style="{StaticResource CardStyle}">

                            <StackPanel>
                                <TextBlock Text="О себе" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,8"/>

                                <TextBlock Text="{Binding Bio}" 
                                           Style="{StaticResource BodyTextStyle}"
                                           Visibility="{Binding Bio, Converter={StaticResource NullOrEmptyToVisibilityConverter}, ConverterParameter=invert}"/>

                                <!-- Если биография пуста -->
                                <TextBlock Text="Пользователь не указал информацию о себе" 
                                           Style="{StaticResource EmptyStateTextStyle}"
                                           Visibility="{Binding Bio, Converter={StaticResource NullOrEmptyToVisibilityConverter}}"/>
                            </StackPanel>
                        </Border>

                        <!-- Последние публикации -->
                        <Border Style="{StaticResource CardStyle}">

                            <StackPanel>
                                <TextBlock Text="Последние публикации" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,12"/>

                                <!-- Список последних публикаций  -->
                                <ItemsControl ItemsSource="{Binding UserPosts}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource SurfaceMutedBrush}" 
                                                    CornerRadius="10" 
                                                    Padding="12" 
                                                    Margin="0,0,0,10">

                                                <StackPanel>
                                                    <TextBlock Text="{Binding Title}" 
                                                               FontWeight="SemiBold" 
                                                               Margin="0,0,0,5"/>

                                                    <TextBlock Text="{Binding Content}" 
                                                               Style="{StaticResource BodyTextStyle}"
                                                               MaxHeight="60"
                                                               TextTrimming="CharacterEllipsis"/>

                                                    <TextBlock Text="{Binding CreatedAtFormatted}" 
                                                               Style="{StaticResource MetaTextStyle}"
                                                               Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Сообщение если нет публикаций -->
                                <TextBlock Text="У пользователя пока нет публикаций" 
                                           Style="{StaticResource EmptyStateTextStyle}"
                                           Margin="0,10,0,0"
                                           Visibility="{Binding HasNoPosts, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </local:SharedLayout.PageContent>
    </local:SharedLayout>
</Page>
