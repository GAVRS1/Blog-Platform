<UserControl x:Class="BlogContent.WPF.Views.AudioPlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlogContent.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Элемент для воспроизведения аудио -->
        <MediaElement x:Name="AudioPlayer" 
                      LoadedBehavior="Manual" 
                      UnloadedBehavior="Stop"
                      Visibility="Collapsed"
                      MediaOpened="AudioPlayer_MediaOpened"
                      MediaEnded="AudioPlayer_MediaEnded"
                      MediaFailed="AudioPlayer_MediaFailed" />

        <!-- Панель управления -->
        <Border Background="#F0F2F5" 
                CornerRadius="8"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Кнопка Play/Pause -->
                <Button x:Name="PlayButton" 
                        Grid.Column="0" 
                        Content="Go" 
                        Width="30" 
                        Height="30"
                        FontSize="14"
                        Margin="0,0,10,0"
                        Click="PlayButton_Click" />

                <!-- Прогресс бар -->
                <Slider x:Name="ProgressSlider" 
                        Grid.Column="1" 
                        Minimum="0" 
                        Maximum="100" 
                        Value="0"
                        Margin="5,0"
                        VerticalAlignment="Center"
                        ValueChanged="ProgressSlider_ValueChanged"
                        PreviewMouseDown="ProgressSlider_PreviewMouseDown"
                        PreviewMouseUp="ProgressSlider_PreviewMouseUp" />

                <!-- Время -->
                <TextBlock x:Name="TimeDisplay" 
                           Grid.Column="2" 
                           Text="0:00 / 0:00" 
                           VerticalAlignment="Center"
                           Margin="10,0,0,0" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
