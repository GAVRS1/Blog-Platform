<Page x:Class="BlogContent.WPF.Views.UserLikesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BlogContent.WPF.Views" 
      xmlns:viewmodel="clr-namespace:BlogContent.WPF.ViewModel"
      xmlns:controls="clr-namespace:BlogContent.WPF.Views"
      xmlns:converters="clr-namespace:BlogContent.WPF.Utilities.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserLikesPage">
    <Page.Resources>
        <converters:MediaUrlToAbsolutePathConverter x:Key="MediaUrlToAbsolutePathConverter"/>
    </Page.Resources>
    <local:SharedLayout>
        <local:SharedLayout.PageContent>
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel MaxWidth="760" HorizontalAlignment="Center">
                        <TextBlock Text="Понравившиеся публикации" 
                                   Style="{StaticResource SectionTitleStyle}"/>

                        <!-- Список понравившихся публикаций -->
                        <ItemsControl x:Name="LikedPostsItems" ItemsSource="{Binding LikedPosts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Карточка поста -->
                                    <Border Style="{StaticResource CardStyle}">
                                        <StackPanel>
                                            <!-- Данные автора -->
                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Аватар автора -->
                                                <Border Grid.Column="0" 
                                                        Style="{StaticResource SmallAvatarStyle}"
                                                        Margin="0,0,10,0"
                                                        Cursor="Hand">
                                                    <Image Source="{Binding UserProfilePicture, Converter={StaticResource MediaUrlToImageConverter}, ConverterParameter=avatar_small}" 
                                                           Stretch="UniformToFill">
                                                        <Image.Clip>
                                                            <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                                                        </Image.Clip>
                                                    </Image>
                                                </Border>

                                                <!-- Информация об авторе и времени публикации -->
                                                <StackPanel Grid.Column="1" 
                                                            VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Username}" 
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource TitleTextBrush}"
                                                               Cursor="Hand">
                                                        <TextBlock.InputBindings>
                                                            <MouseBinding MouseAction="LeftClick" 
                                                                         Command="{Binding DataContext.ViewUserProfileCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                         CommandParameter="{Binding UserId}"/>
                                                        </TextBlock.InputBindings>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding CreatedAtFormatted}" 
                                                               Style="{StaticResource MetaTextStyle}"/>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Заголовок поста -->
                                            <TextBlock Text="{Binding Title}" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold" 
                                                       Margin="0,0,0,6" 
                                                       TextWrapping="Wrap"/>

                                            <!-- Текст поста -->
                                            <TextBlock Text="{Binding Content}" 
                                                       Style="{StaticResource BodyTextStyle}"
                                                       Margin="0,0,0,15"/>

                                            <!-- Медиа-контент (фото/видео/аудио) в зависимости от типа -->
                                            <Border Visibility="{Binding HasImage, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                    Margin="0,0,0,15">
                                                <Image Source="{Binding ImageUrl, Converter={StaticResource MediaUrlToImageConverter}, ConverterParameter=post_image}" Stretch="Uniform" MaxHeight="400"/>
                                            </Border>

                                            <Border Visibility="{Binding HasVideo, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                    Margin="0,0,0,15" 
                                                    Height="300">
                                                <controls:MediaPlayerControl MediaSource="{Binding VideoUrl, Converter={StaticResource MediaUrlToAbsolutePathConverter}}"/>
                                            </Border>

                                            <Border Visibility="{Binding HasAudio, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                    Margin="0,0,0,15">
                                                <StackPanel>
                                                    <TextBlock Text="🎵 Аудиозапись" 
                                                               Margin="0,0,0,5"/>
                                                    <controls:AudioPlayerControl AudioSource="{Binding AudioUrl, Converter={StaticResource MediaUrlToAbsolutePathConverter}}"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Статистика поста (лайки и комментарии) -->
                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" 
                                                            Orientation="Horizontal">
                                                    <TextBlock Text="❤️" 
                                                               VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding LikesCount}" 
                                                               Margin="5,0,0,0" 
                                                               VerticalAlignment="Center"
                                                               Style="{StaticResource MetaTextStyle}"/>
                                                </StackPanel>

                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding CommentsCountText}" 
                                                           Style="{StaticResource MetaTextStyle}"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>

                                            <!-- Разделитель -->
                                            <Separator Margin="0,0,0,10"/>

                                            <!-- Кнопки действий -->
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Кнопка лайка -->
                                                <Button Grid.Column="0" 
                                                        Content="{Binding LikeButtonText}" 
                                                        Command="{Binding DataContext.LikePostCommand, RelativeSource={RelativeSource AncestorType=Page}}" 
                                                        CommandParameter="{Binding Id}" 
                                                        Foreground="{Binding LikeButtonColor}" 
                                                        Style="{StaticResource GhostButtonStyle}"/>

                                                <!-- Кнопка комментария -->
                                                <Button Grid.Column="1" 
                                                        Content="💬 Комментировать" 
                                                        Command="{Binding DataContext.CommentPostCommand, RelativeSource={RelativeSource AncestorType=Page}}" 
                                                        CommandParameter="{Binding Id}" 
                                                        Style="{StaticResource GhostButtonStyle}"/>
                                            </Grid>

                                            <!-- Блок комментариев -->
                                            <StackPanel Visibility="{Binding AreCommentsExpanded, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                       Margin="0,10,0,0">

                                                <Separator Margin="0,0,0,10"/>

                                                <!-- Список комментариев -->
                                                <ItemsControl ItemsSource="{Binding Comments}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Margin="0,0,0,10">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Аватар комментатора -->
                                                                <Border Grid.Column="0" 
                                                                        Width="32" 
                                                                        Height="32" 
                                                                        CornerRadius="16" 
                                                                        Background="LightGray" 
                                                                        Margin="0,0,10,0">
                                                                    <Image Source="{Binding UserProfilePicture, Converter={StaticResource MediaUrlToImageConverter}, ConverterParameter=avatar_small}" 
                                                                           Stretch="UniformToFill">
                                                                        <Image.Clip>
                                                                            <EllipseGeometry Center="16,16" RadiusX="16" RadiusY="16"/>
                                                                        </Image.Clip>
                                                                    </Image>
                                                                </Border>

                                                                <!-- Содержимое комментария -->
                                                                <StackPanel Grid.Column="1">
                                                                <Border Background="{StaticResource SurfaceMutedBrush}" 
                                                                        CornerRadius="10" 
                                                                        Padding="12,8">
                                                                        <StackPanel>
                                                                            <TextBlock Text="{Binding Username}" 
                                                                                       FontWeight="SemiBold" 
                                                                                       Margin="0,0,0,5"/>
                                                                            <TextBlock Text="{Binding Content}" 
                                                                                       TextWrapping="Wrap"/>

                                                                            <!-- Время и действия -->
                                                                            <StackPanel Orientation="Horizontal" 
                                                                                        Margin="0,5,0,0">
                                                                                <TextBlock Text="{Binding CreatedAtFormatted}" 
                                                                                           Style="{StaticResource MetaTextStyle}"/>

                                                                                <!-- Кнопка лайка -->
                                                                                <Button Command="{Binding LikeCommentCommand}"
                                                                                        Style="{StaticResource GhostButtonStyle}"
                                                                                        Margin="10,0,0,0"
                                                                                        Padding="0">
                                                                                    <StackPanel Orientation="Horizontal">
                                                                                        <TextBlock Text="❤️" VerticalAlignment="Center"/>
                                                                                        <TextBlock Text="{Binding LikesCount}" 
                                                                                                   Margin="5,0,0,0" 
                                                                                                   VerticalAlignment="Center"/>
                                                                                    </StackPanel>
                                                                                </Button>

                                                                                <!-- Кнопка ответа -->
                                                                                <Button Content="Ответить" 
                                                                                        Command="{Binding ToggleReplyInputCommand}"
                                                                                        Style="{StaticResource GhostButtonStyle}"
                                                                                        Margin="10,0,0,0"/>

                                                                                <!-- Кнопка показа/скрытия ответов если есть -->
                                                                                <Button Content="{Binding RepliesCountText}" 
                                                                                        Command="{Binding ToggleRepliesCommand}"
                                                                                        Style="{StaticResource GhostButtonStyle}"
                                                                                        Margin="10,0,0,0"
                                                                                        Visibility="{Binding HasReplies, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                                            </StackPanel>
                                                                        </StackPanel>
                                                                    </Border>

                                                                    <!-- Поле для ответа -->
                                                                    <Grid Margin="10,5,0,0"
                                                                          Visibility="{Binding IsReplying, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                            <ColumnDefinition Width="*"/>
                                                                        </Grid.ColumnDefinitions>

                                                                        <!-- Аватар (исправленный круглый) -->
                                                                        <Border Grid.Column="0" 
                                                                                Width="28" 
                                                                                Height="28" 
                                                                                CornerRadius="14" 
                                                                                Background="LightGray" 
                                                                                Margin="0,0,10,0">
                                                                            <Image Source="{Binding UserProfilePicture, Converter={StaticResource MediaUrlToImageConverter}, ConverterParameter=avatar_small}" 
                                                                                   Stretch="UniformToFill">
                                                                                <Image.Clip>
                                                                                    <EllipseGeometry Center="14,14" RadiusX="14" RadiusY="14"/>
                                                                                </Image.Clip>
                                                                            </Image>
                                                                        </Border>

                                                                        <!-- Поле ввода и кнопка отправки -->
                                                                        <Grid Grid.Column="1">
                                                                            <TextBox Text="{Binding ReplyText, UpdateSourceTrigger=PropertyChanged}" 
                                                                                     Background="{StaticResource SurfaceMutedBrush}" 
                                                                                     BorderThickness="0" 
                                                                                     Padding="8,6" 
                                                                                     VerticalContentAlignment="Center">
                                                                                <TextBox.Resources>
                                                                                    <Style TargetType="Border">
                                                                                        <Setter Property="CornerRadius" Value="14"/>
                                                                                    </Style>
                                                                                </TextBox.Resources>
                                                                            </TextBox>

                                                                            <Button Command="{Binding SubmitReplyCommand}"
                                                                                    Content="+" 
                                                                                    HorizontalAlignment="Right"
                                                                                    Background="{StaticResource PrimaryColor}"
                                                                                    Foreground="White"
                                                                                    BorderThickness="0"
                                                                                    Width="30"
                                                                                    Height="30"
                                                                                    Margin="0,0,5,0"/>
                                                                        </Grid>
                                                                    </Grid>

                                                                    <!-- Список ответов на комментарий -->
                                                                    <ItemsControl ItemsSource="{Binding Replies}" 
                                                                                  Margin="20,5,0,0"
                                                                                  Visibility="{Binding AreRepliesExpanded, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <Grid Margin="0,5,0,5">
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="Auto"/>
                                                                                        <ColumnDefinition Width="*"/>
                                                                                    </Grid.ColumnDefinitions>

                                                                                    <!-- Аватар (исправленный круглый) -->
                                                                                    <Border Grid.Column="0" 
                                                                                            Width="24" 
                                                                                            Height="24" 
                                                                                            CornerRadius="12" 
                                                                                            Background="LightGray" 
                                                                                            Margin="0,0,8,0">
                                                                                        <Image Source="{Binding UserProfilePicture, Converter={StaticResource MediaUrlToImageConverter}, ConverterParameter=avatar_small}" 
                                                                                               Stretch="UniformToFill">
                                                                                            <Image.Clip>
                                                                                                <EllipseGeometry Center="12,12" RadiusX="12" RadiusY="12"/>
                                                                                            </Image.Clip>
                                                                                        </Image>
                                                                                    </Border>

                                                                                    <!-- Содержимое ответа -->
                                                                    <Border Grid.Column="1" 
                                                                            Background="{StaticResource SurfaceMutedBrush}" 
                                                                            CornerRadius="10" 
                                                                            Padding="10,6">
                                                                                        <StackPanel>
                                                                                            <TextBlock Text="{Binding Username}" 
                                                                                                      FontWeight="SemiBold" 
                                                                                                      FontSize="12" 
                                                                                                      Margin="0,0,0,3"/>
                                                                                            <TextBlock Text="{Binding Content}" 
                                                                                                      TextWrapping="Wrap"
                                                                                                      FontSize="12"/>
                                                                                            <TextBlock Text="{Binding CreatedAtFormatted}" 
                                                                                                      FontSize="10" 
                                                                                                      Foreground="{StaticResource MutedTextBrush}"
                                                                                                      Margin="0,3,0,0"/>
                                                                                        </StackPanel>
                                                                                    </Border>
                                                                                </Grid>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </StackPanel>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <!-- Форма добавления комментария -->
                                                <Grid Margin="0,5,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Аватар текущего пользователя -->
                                                    <Border Grid.Column="0" 
                                                            Width="32" 
                                                            Height="32" 
                                                            CornerRadius="16" 
                                                            Background="LightGray" 
                                                            Margin="0,0,10,0">
                                                        <Image Source="{Binding UserProfilePicture, Converter={StaticResource MediaUrlToImageConverter}, ConverterParameter=avatar_small}" 
                                                               Stretch="UniformToFill">
                                                            <Image.Clip>
                                                                <EllipseGeometry Center="16,16" RadiusX="16" RadiusY="16"/>
                                                            </Image.Clip>
                                                        </Image>
                                                    </Border>

                                                    <!-- Поле ввода комментария -->
                                                    <Grid Grid.Column="1">
                                                        <TextBox Text="{Binding NewCommentText, UpdateSourceTrigger=PropertyChanged}" 
                                                                 Background="{StaticResource SurfaceMutedBrush}" 
                                                                 BorderThickness="0" 
                                                                 Padding="12,8" 
                                                                 VerticalContentAlignment="Center"
                                                                 VerticalAlignment="Center"
                                                                 BorderBrush="Transparent">
                                                            <TextBox.Resources>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="CornerRadius" Value="18"/>
                                                                </Style>
                                                            </TextBox.Resources>
                                                        </TextBox>

                                                        <Button Content="+" 
                                                                Command="{Binding DataContext.AddCommentCommand, RelativeSource={RelativeSource AncestorType=Page}}" 
                                                                CommandParameter="{Binding}" 
                                                                Background="{StaticResource PrimaryColor}" 
                                                                BorderThickness="0" 
                                                                HorizontalAlignment="Right" 
                                                                Width="36" 
                                                                Height="36" 
                                                                Cursor="Hand"/>
                                                    </Grid>
                                                </Grid>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Сообщение если нет лайкнутых публикаций -->
                        <StackPanel HorizontalAlignment="Center"
                                    Margin="0,30,0,0"
                                    Visibility="{Binding HasNoLikes, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="💖" FontSize="32" HorizontalAlignment="Center"/>
                            <TextBlock Text="У вас ещё нет понравившихся публикаций."
                                       Style="{StaticResource EmptyStateTextStyle}"
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </local:SharedLayout.PageContent>
    </local:SharedLayout>
</Page>
